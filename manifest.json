{
    "manifest_version": 3,
    "name": "Elon Mask",
    "version": "1.0",
    "description": "Replaces text blocks containing the word 'Elon' with a black box.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "w-icons8-car-16.png",
        "48": "w-icons8-car-48.png",
        "128": "w-icons8-car-128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "w-icons8-car-16.png",
      "48": "w-icons8-car-48.png",
      "128": "w-icons8-car-128.png"
    }
  }
  